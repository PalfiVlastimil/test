@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
    <form method="post">
        <div class="form-group">
            <label for="prihlaseni-email">Email</label>
            <input type="email" class="form-control" asp-for="@Model.Login.Email">

        </div>
        <div class="form-group">
            <label for="prihlaseni-heslo">Heslo</label>
            <input type="password" class="form-control" asp-for="@Model.Login.Password">
        </div>
        <button asp-page="/Logged" type="submit" class="btn btn-primary">Přihlásit</button>
    </form>
</div>
